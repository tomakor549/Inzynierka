<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shareData.ShareDataFragment">


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Udostępnienia:"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/share_data_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/share_data_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4A72EF">

                <TableRow>
                    <TextView
                        style="@style/MyStyles.TableUserNameTextView"
                        android:text="Imię i nazwisko" />

                    <TextView
                        style="@style/MyStyles.TableUserTimeTextView"
                        android:text="Termin " />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/trip_plans_button_add_plan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dodaj Plan"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>