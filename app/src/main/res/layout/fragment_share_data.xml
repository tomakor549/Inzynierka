<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shareData.ShareDataFragment">


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Moje Plany:"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/share_data_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <LinearLayout
            android:id="@+id/share_data_main_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- rozwijane elementy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/trip_plans_button_expand1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_toStartOf="@+id/trip_plans_name1"
                        android:layout_toLeftOf="@+id/trip_plans_name1"
                        android:src="@drawable/ic_expand_more" />

                    <TextView
                        android:id="@+id/trip_plans_name1"
                        android:layout_width="268dp"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/trip_plans_button_edit1"
                        android:layout_toLeftOf="@+id/trip_plans_button_edit1"
                        android:gravity="center_vertical"
                        android:lastBaselineToBottomHeight="20dp"
                        android:text="costam"
                        android:textSize="20dp" />

                    <ImageButton
                        android:id="@+id/trip_plans_button_edit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/trip_plans_button_delete1"
                        android:src="@drawable/ic_edit" />

                    <ImageButton
                        android:id="@+id/trip_plans_button_delete1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_delete" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Przykladowe cos"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/trip_plans_button_add_plan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dodaj Plan"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>