<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tripPlans.selectTripPlan.shareTrip.TripShare">

    <include
        android:id="@+id/toolbar_trip_share"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/article_activity_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_trip_share"
        tools:layout_editor_absoluteX="20dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center">


        <ListView
            android:id="@+id/listView_bluetooch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="84dp">

        </ListView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>